---
import Layout from '../layouts/Layout.astro';
import AnimatedStars from '../components/AnimatedStars.astro';
---

<Layout title="Animations">
  <div style="width: 100%; max-width: 1400px; display: flex; align-items: center; justify-content: space-between; position: relative;">
    <a href="/" class="banner-sun banner-sun-left" style="width: 20%; min-width: 8%; max-width: 25%; text-decoration: none; top: -6vw; position: relative;">
      <img src="/img/Sol.png" alt="Sun" style="width: 100%; height: auto; object-fit: contain;" />
    </a>
    <div style="width: 60%; min-width: 250px; display: flex; flex-direction: column; align-items: center; gap: 0; padding: 0 2vw; z-index: 2;">
      <div style="text-align: center;">
        <h1>Animations</h1>
        <p class="banner-subtitle">A bit of movement</p>
      </div>
      <div class="reth-animations-row">
        <a href="/animations/uno" class="reth-animations-link"><img src="/img/SolYLuna.png" alt="Sol y Luna 1" class="reth-animations-icon" /></a>
        <a href="/animations/dos" class="reth-animations-link"><img src="/img/SolYLuna.png" alt="Sol y Luna 2" class="reth-animations-icon" /></a>
        <a href="/animations/tres" class="reth-animations-link"><img src="/img/SolYLuna.png" alt="Sol y Luna 3" class="reth-animations-icon" /></a>
        <a href="/animations/cuatro" class="reth-animations-link"><img src="/img/SolYLuna.png" alt="Sol y Luna 4" class="reth-animations-icon" /></a>
      </div>
    </div>
    <a href="/" class="banner-sun banner-sun-right" style="width: 20%; min-width: 8%; max-width: 25%; text-decoration: none; top: -6vw; position: relative;">
      <img src="/img/Sol.png" alt="Sun" style="width: 100%; height: auto; object-fit: contain;" />
    </a>
  </div>
  <AnimatedStars count={16} />
</Layout>

<style>
  @import url('../styles/global.css');
  .banner-sun {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }
  .banner-subtitle {
    font-size: 1.5rem;
    color: #fff;
    margin: 0;
    opacity: 0.9;
  }
  .category-grid {
    display: flex;
    justify-content: center;
    gap: 4rem;
  }
  .category-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    transition: transform 0.3s ease;
    padding: 1rem;
  }
  .category-item:hover {
    transform: translateY(-5px);
  }
  .category-icon {
    width: 12%;
    height: 12%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }
  .category-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  @media (max-width: 900px) {
    h1 { font-size: 6vw; }
    .banner-sun img { width: 22vw; }
  }
  @media (max-width: 600px) {
    h1 { font-size: 8vw; }
    .banner-sun img { width: 14vw; }
  }
  .animated-bg {
    position: fixed;
    inset: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 0;
  }
  .bg-star {
    position: absolute;
    opacity: 0.8;
    animation: star-twinkle 2.5s infinite alternate;
  }
  .star1 { left: 20vw; top: 18vh; animation-delay: 0.5s; }
  .star2 { right: 18vw; top: 22vh; animation-delay: 1.2s; }
  .star3 { left: 40vw; top: 10vh; animation-delay: 1.7s; }
  .star4 { left: 60vw; top: 30vh; animation-delay: 0.9s; }
  .star5 { right: 10vw; bottom: 18vh; animation-delay: 2.2s; }
  @keyframes star-twinkle {
    0% { opacity: 0.8; transform: scale(1); }
    100% { opacity: 0.3; transform: scale(1.2); }
  }
  .reth-animations-row {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 5%;
    width: 100%;
    margin-top: 18vw;
    margin-bottom: 4vw;
  }
  .reth-animations-icon {
    width: 25%;
    min-width: 18%;
    max-width: 32%;
    height: auto;
    opacity: 0.97;
    filter: drop-shadow(0 0 0.7vw #fff8);
    transition: transform 0.2s;
  }
  .reth-animations-icon:hover {
    transform: scale(1.07) rotate(-2deg);
    filter: drop-shadow(0 0 1vw #fff8);
  }
  .reth-animations-link {
    display: block;
    border-radius: 50%;
    transition: box-shadow 0.2s, filter 0.2s, transform 0.2s;
  }
  .reth-animations-link:hover .reth-animations-icon,
  .reth-animations-link:focus .reth-animations-icon {
    box-shadow: 0 0 2vw 1vw #fff8, 0 0 4vw 2vw #fff4;
    filter: drop-shadow(0 0 1vw #fff8);
    transform: scale(1.09) rotate(-2deg);
  }
</style> 