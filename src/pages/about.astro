---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About Me">
  <div class="about-bg">
    <div class="about-frame">
      <img src="/img/Sol.png" alt="Sol" class="about-sun" draggable="false" />
      <h1 class="about-title">ABOUT ME</h1>
      <div class="about-grid">
        <div class="about-item">
          <div class="about-icon"><img src="/img/About.png" alt="Links" /></div>
          <div class="about-label"><em>LINKS</em></div>
          <div class="about-desc">Venus is the second planet<br />from the Sun</div>
        </div>
        <div class="about-item">
          <div class="about-icon"><img src="/img/Rompe.png" alt="Me" /></div>
          <div class="about-label"><em>ME</em></div>
          <div class="about-desc">Mercury is the smallest planet<br />in the Solar System</div>
        </div>
        <div class="about-item">
          <div class="about-icon"><img src="/img/Pics.png" alt="My likes" /></div>
          <div class="about-label"><em>My likes</em></div>
          <div class="about-desc">Despite being red, Mars is<br />actually a cold place</div>
        </div>
        <div class="about-item">
          <div class="about-icon"><img src="/img/Enmedio_.png" alt="What I'm lookin' for?" /></div>
          <div class="about-label"><em>WHAT I'M LOOKIN' FOR?</em></div>
          <div class="about-desc">Jupiter is the biggest planet<br />in the Solar System</div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
:root {
  --about-bg: linear-gradient(135deg, #7a2323 80%, #5a1818 100%),
    repeating-linear-gradient(120deg, rgba(255,255,255,0.03) 0 2px, transparent 2px 40px),
    repeating-linear-gradient(60deg, rgba(255,255,255,0.02) 0 1px, transparent 1px 30px);
  --about-frame-bg: #5a1818;
  --about-frame-radius: 2vw;
  --about-frame-border: 2.5px solid #fff;
  --about-frame-shadow: 0 0 0 8px #7a2323, 0 0 32px 0 rgba(0,0,0,0.13);
  --about-title: #fff;
  --about-label: #cbb7a0;
  --about-desc: #e2d2b0;
}
html, body {
  overflow-x: hidden;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
.about-bg {
  min-height: 100vh;
  width: 100vw;
  background: var(--about-bg);
  background-blend-mode: multiply;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}
.about-frame {
  position: relative;
  width: 92vw;
  max-width: 1100px;
  min-height: 80vh;
  background: var(--about-frame-bg);
  border-radius: var(--about-frame-radius);
  border: var(--about-frame-border);
  box-shadow: var(--about-frame-shadow);
  padding: 3vw 4vw 4vw 4vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  overflow-x: hidden;
  box-sizing: border-box;
}
.about-frame::before, .about-frame::after {
  content: '';
  position: absolute;
  border: 2.5px solid #fff;
  border-radius: 0 0 2vw 2vw;
  width: 2vw;
  height: 2vw;
  background: transparent;
  z-index: 2;
}
.about-frame::before {
  left: 0;
  top: 0;
  border-radius: 0 0 0 2vw;
  border-width: 0 0 2.5px 2.5px;
}
.about-frame::after {
  right: 0;
  bottom: 0;
  border-radius: 0 2vw 0 0;
  border-width: 2.5px 2.5px 0 0;
}
.about-sun {
  position: absolute;
  top: -4vw;
  left: -4vw;
  width: 13vw;
  height: auto;
  z-index: 3;
  opacity: 0.95;
}
.about-title {
  text-align: center;
  font-size: 3.5vw;
  color: var(--about-title);
  margin: 2vw 0 3vw 0;
  font-family: var(--font-title, 'Romanesco', cursive);
  letter-spacing: 0.05em;
}
.about-grid {
  width: 100%;
  max-width: 900px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 3vw 4vw;
  justify-items: center;
  align-items: start;
}
.about-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background: transparent;
  padding: 1vw 0.5vw;
  text-align: center;
}
.about-icon img {
  width: 8vw;
  height: 8vw;
  object-fit: contain;
  margin-bottom: 1vw;
  background: none;
  border-radius: 0;
  border: none;
  padding: 0;
  box-shadow: none;
}
.about-label {
  font-size: 1.5vw;
  color: var(--about-label);
  font-style: italic;
  margin-bottom: 0.7vw;
  text-align: center;
}
.about-desc {
  font-size: 1.2vw;
  color: var(--about-desc);
  text-align: center;
  font-family: var(--font-content, 'Edu NSW ACT Cursive', cursive);
}
@media (max-width: 1100px) {
  .about-grid { grid-template-columns: repeat(2, 1fr); max-width: 600px; gap: 5vw 4vw; }
}
@media (max-width: 700px) {
  .about-frame { padding: 3vw 1vw; }
  .about-grid { grid-template-columns: 1fr; max-width: 350px; gap: 4vw 0; }
  .about-icon img { width: 14vw; height: 14vw; }
}
@media (max-width: 900px) {
  .about-title { font-size: 6vw; }
  .about-label { font-size: 3vw; }
  .about-desc { font-size: 2vw; }
}
@media (max-width: 600px) {
  .about-title { font-size: 8vw; }
  .about-label { font-size: 5vw; }
  .about-desc { font-size: 3vw; }
}
</style>
