<!DOCTYPE html>
---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="RETH – Creative development">
	<div class="reth-bg-texture">
		<div class="reth-frame">
			<img src="/img/Sol.png" alt="Sol" class="reth-sun reth-sun-left" draggable="false" />
			<img src="/img/Sol.png" alt="Sol" class="reth-sun reth-sun-right" draggable="false" />
			
			<div class="reth-stars">
				<svg class="reth-star reth-star-1" viewBox="0 0 32 32" style="width: 2.5vw; height: 2.5vw;"><polygon points="16,2 18,14 30,16 18,18 16,30 14,18 2,16 14,14" fill="#fff" opacity="0.7"/></svg>
				<svg class="reth-star reth-star-2" viewBox="0 0 18 18" style="width: 1.4vw; height: 1.4vw;"><polygon points="9,1 10,8 17,9 10,10 9,17 8,10 1,9 8,8" fill="#fff" opacity="0.5"/></svg>
				<svg class="reth-star reth-star-3" viewBox="0 0 12 12" style="width: 1vw; height: 1vw;"><polygon points="6,1 7,6 11,6 7,7 6,11 5,7 1,6 5,6" fill="#fff" opacity="0.4"/></svg>
				<svg class="reth-star reth-star-4" viewBox="0 0 18 18" style="width: 1.2vw; height: 1.2vw;"><polygon points="9,1 10,8 17,9 10,10 9,17 8,10 1,9 8,8" fill="#fff" opacity="0.35"/></svg>
				<svg class="reth-star reth-star-5" viewBox="0 0 14 14" style="width: 0.9vw; height: 0.9vw;"><polygon points="7,1 8,7 13,7 8,8 7,13 6,8 1,7 6,7" fill="#fff" opacity="0.3"/></svg>
				<svg class="reth-star reth-star-6" viewBox="0 0 10 10" style="width: 0.7vw; height: 0.7vw;"><polygon points="5,1 6,5 9,5 6,6 5,9 4,6 1,5 4,5" fill="#fff" opacity="0.25"/></svg>
			</div>

			<div class="reth-content">
				<div class="reth-title">
					<a href="/about" class="reth-title-link font-title">RETH</a>
				</div>
				<div class="reth-line"></div>
				<div class="reth-subtitle">Creative development</div>

				<div class="reth-icons-row">
					<div class="reth-icon-col">
						<span class="reth-icon-label">Illustrations</span>
						<a href="/illustrations">
							<img src="/img/Ojo.png" alt="Illustrations" class="reth-icon-img" />
						</a>
					</div>
					<div class="reth-icon-col">
						<span class="reth-icon-label">Animations</span>
						<a href="/animations">
							<img src="/img/Animacion.png" alt="Animations" class="reth-icon-img" />
						</a>
					</div>
					<div class="reth-icon-col">
						<span class="reth-icon-label">Photographies</span>
						<a href="/photographies">
							<img src="/img/Foto.png" alt="Photographies" class="reth-icon-img" />
						</a>
					</div>
					<div class="reth-icon-col">
						<span class="reth-icon-label">Scripts</span>
						<a href="/scripts">
							<img src="/img/Scripts1.png" alt="Scripts" class="reth-icon-img" />
						</a>
					</div>
				</div>
			</div>

			<div class="reth-frame-deco"></div>
		</div>
	</div>
</Layout>

<style>
:root {
	--main-bg: linear-gradient(135deg, #7a2323 80%, #5a1818 100%),
		repeating-linear-gradient(120deg, rgba(255,255,255,0.03) 0 0.15vw, transparent 0.15vw 3vw),
		repeating-linear-gradient(60deg, rgba(255,255,255,0.02) 0 0.08vw, transparent 0.08vw 2vw);
	--frame-bg: #5a1818;
	--frame-radius: 3vw;
	--frame-border: 0.2vw solid #fff;
	--frame-shadow: 0 0 0 0.6vw #7a2323, 0 0 2vw 0 rgba(0,0,0,0.13);
	--text-main: #fff;
	--text-label: #cbb7a0;
}

html, body {
	overflow: hidden;
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

/* Layout principal desktop */
@media (min-width: 701px) {
	.reth-bg-texture {
		height: 100vh;
		width: 100vw;
		background: var(--main-bg);
		background-blend-mode: multiply;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
	}
	.reth-frame {
		position: relative;
		width: 85vw;
		max-width: 1100px;
		height: 100vh;
		background: var(--frame-bg);
		border-radius: var(--frame-radius);
		border: var(--frame-border);
		box-shadow: var(--frame-shadow);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		box-sizing: border-box;
		padding: 0 2vw;
		overflow: visible;
	}
	.reth-content {
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}
}

/* Layout móvil */
@media (max-width: 700px) {
	.reth-bg-texture {
		min-height: 100vh;
		width: 100vw;
		background: var(--main-bg);
		background-blend-mode: multiply;
		display: block;
		overflow: auto;
	}
	.reth-frame {
		width: 98vw;
		max-width: 100vw;
		min-height: 100vh;
		background: var(--frame-bg);
		border-radius: var(--frame-radius);
		border: var(--frame-border);
		box-shadow: var(--frame-shadow);
		margin: 0 auto;
		padding: 2vw 1vw;
		box-sizing: border-box;
		position: relative;
		overflow: visible;
	}
	.reth-content {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: flex-start;
		min-height: 0;
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}
}

/* Marco decorativo */
.reth-frame-deco {
	pointer-events: none;
	position: absolute;
	inset: 0;
	border-radius: var(--frame-radius);
	border: 0.2vw solid rgba(255,255,255,0.13);
	z-index: 1;
}

.reth-frame::before, .reth-frame::after {
	content: '';
	position: absolute;
	left: 50%;
	width: 9vw;
	height: 2vw;
	background: var(--frame-bg);
	border: var(--frame-border);
	border-radius: 1.2vw 1.2vw 2vw 2vw / 1.2vw 1.2vw 2vw 2vw;
	z-index: 3;
}

.reth-frame::before { 
	top: -1vw; 
	transform: translateX(-50%); 
}

.reth-frame::after { 
	bottom: -1vw; 
	transform: translateX(-50%) rotate(180deg); 
}

/* Soles */
.reth-sun {
	position: absolute;
	top: 50%;
	width: 38vw;
	height: auto;
	transform: translateY(-50%);
	z-index: 2;
	opacity: 0.93;
	user-select: none;
	pointer-events: none;
	will-change: transform;
}

.reth-sun-left {
	left: -18vw;
	animation: rotate-sun-left 18s linear infinite;
}

.reth-sun-right {
	right: -18vw;
	animation: rotate-sun-right 18s linear infinite;
}

/* Estrellas */
.reth-stars {
	position: absolute;
	inset: 0;
	pointer-events: none;
}

.reth-star {
	position: absolute;
	animation: twinkle 4s ease-in-out infinite;
}

.reth-star-1 { top: 15%; left: 20%; animation-delay: 0s; }
.reth-star-2 { top: 25%; right: 25%; animation-delay: 0.5s; }
.reth-star-3 { bottom: 30%; left: 30%; animation-delay: 1s; }
.reth-star-4 { bottom: 20%; right: 20%; animation-delay: 1.5s; }
.reth-star-5 { top: 40%; left: 40%; animation-delay: 2s; }
.reth-star-6 { top: 60%; right: 35%; animation-delay: 2.5s; }

/* Contenido */
.reth-title {
	text-align: center;
	margin-bottom: 1vw;
}

.reth-title-link {
	font-size: 8vw;
	line-height: 1;
	letter-spacing: 0.02em;
	text-transform: uppercase;
	transition: transform 0.3s ease;
}

.reth-title-link:hover {
	transform: scale(1.05);
}

.reth-line {
	width: 100%;
	height: 0.2vw;
	background: var(--text-main);
	margin: 1vw 0;
	opacity: 0.8;
}

.reth-subtitle {
	font-size: 2vw;
	text-align: center;
	margin-bottom: 4vw;
	opacity: 0.9;
	letter-spacing: 0.1em;
}

.reth-icons-row {
	display: flex;
	gap: 4vw;
	margin-top: 2vw;
}

.reth-icon-col {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 1vw;
}

.reth-icon-label {
	color: var(--text-label);
	font-size: 1.2vw;
}

.reth-icon-img {
	width: 8vw;
	height: auto;
	transition: transform 0.3s ease;
}

.reth-icon-img:hover {
	transform: scale(1.1);
}

/* Animaciones */
@keyframes rotate-sun-left {
	from { transform: translateY(-50%) rotate(0deg); }
	to { transform: translateY(-50%) rotate(-360deg); }
}

@keyframes rotate-sun-right {
	from { transform: translateY(-50%) rotate(0deg); }
	to { transform: translateY(-50%) rotate(360deg); }
}

@keyframes twinkle {
	0%, 100% { opacity: 0.3; }
	50% { opacity: 1; }
}
</style>
