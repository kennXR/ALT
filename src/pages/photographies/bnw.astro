---
import Layout from '../../layouts/Layout.astro';
import AnimatedStars from '../../components/AnimatedStars.astro';
---
<Layout title="Black and White">
  <div class="corner-sun">
    <a href="/ALT/photographies">
      <img src="img/Sol.png" alt="Sun" class="corner-sun-img" />
    </a>
  </div>
  <div class="photo-bnw-content">
    <h1 class="photo-bnw-title">Black and White</h1>
    <div class="gallery-grid">
      <a href="/ALT/negro/Captura de pantalla 2025-06-03 a la(s) 22.55.53.png" target="_blank" rel="noopener"><img src="/ALT/negro/Captura de pantalla 2025-06-03 a la(s) 22.55.53.png" alt="Negro 1" class="gallery-img" /></a>
      <a href="/ALT/negro/Captura de pantalla 2025-06-03 a la(s) 22.55.43.png" target="_blank" rel="noopener"><img src="/ALT/negro/Captura de pantalla 2025-06-03 a la(s) 22.55.43.png" alt="Negro 2" class="gallery-img" /></a>
      <a href="/ALT/negro/Captura de pantalla 2025-06-03 a la(s) 22.55.33.png" target="_blank" rel="noopener"><img src="/ALT/negro/Captura de pantalla 2025-06-03 a la(s) 22.55.33.png" alt="Negro 3" class="gallery-img" /></a>
      <a href="/ALT/negro/Captura de pantalla 2025-06-03 a la(s) 22.55.20.png" target="_blank" rel="noopener"><img src="/ALT/negro/Captura de pantalla 2025-06-03 a la(s) 22.55.20.png" alt="Negro 4" class="gallery-img" /></a>
      <a href="/ALT/negro/Captura de pantalla 2025-06-03 a la(s) 22.54.50.png" target="_blank" rel="noopener"><img src="/ALT/negro/Captura de pantalla 2025-06-03 a la(s) 22.54.50.png" alt="Negro 5" class="gallery-img" /></a>
      <a href="/ALT/negro/Captura de pantalla 2025-06-03 a la(s) 22.54.39.png" target="_blank" rel="noopener"><img src="/ALT/negro/Captura de pantalla 2025-06-03 a la(s) 22.54.39.png" alt="Negro 6" class="gallery-img" /></a>
    </div>
  </div>
  <AnimatedStars count={12} />
</Layout>
<style>
  .corner-sun {
    position: absolute;
    top: 0;
    left: 0;
    width: 10vw;
    height: 10vw;
    z-index: 10;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    pointer-events: none;
  }
  .corner-sun a {
    pointer-events: auto;
    display: block;
    width: 100%;
    height: 100%;
  }
  .corner-sun-img {
    width: 100%;
    height: auto;
    margin: 7% 0 0 7%;
    filter: drop-shadow(0 0 1vw #fff8);
    display: block;
  }
  .photo-bnw-content {
    min-height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #5c1818;
    border-radius: 2vw;
    margin: 4vw auto;
    width: 80vw;
    box-shadow: 0 0 2vw #0006;
  }
  .photo-bnw-title {
    color: #fff;
    font-size: 5vw;
    margin-bottom: 2vw;
    text-align: center;
  }
  .gallery-grid {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(18vw, 1fr));
    gap: 2vw;
    justify-items: center;
    align-items: center;
    margin: 2vw 0 4vw 0;
    max-height: 60vh;
    overflow-y: auto;
    padding-right: 1vw;
  }
  .gallery-img {
    width: 100%;
    max-width: 20vw;
    border-radius: 1vw;
    box-shadow: 0 0 1vw #0008;
    transition: transform 0.2s, box-shadow 0.2s;
    object-fit: cover;
    aspect-ratio: 1/1;
  }
  .gallery-img:hover {
    transform: scale(1.07) rotate(-2deg);
    box-shadow: 0 0 2vw #fff8;
    z-index: 2;
  }
  @media (max-width: 900px) {
    .photo-bnw-title { font-size: 8vw; }
    .photo-bnw-content { width: 96vw; }
    .gallery-grid { grid-template-columns: repeat(auto-fit, minmax(32vw, 1fr)); }
    .gallery-img { max-width: 32vw; }
  }
  @media (max-width: 600px) {
    .photo-bnw-title { font-size: 11vw; }
    .photo-bnw-content { width: 99vw; }
    .gallery-grid { grid-template-columns: repeat(auto-fit, minmax(48vw, 1fr)); }
    .gallery-img { max-width: 48vw; }
  }
</style> 