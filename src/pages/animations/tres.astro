---
import Layout from '../../layouts/Layout.astro';
---
<Layout title="Tres">
  <div class="reth-scripts-bg">
    <a href="/" class="reth-scripts-sol-deco-link">
      <img src="/img/SolYLuna.png" alt="Sol y Luna" class="reth-scripts-sol-deco" />
    </a>
    <div class="reth-scripts-frame center-video-frame">
      <video class="autorretrato-video" src="/animaciones/Pendulo-KENN.mp4" controls playsinline preload="auto"></video>
      <div class="reth-scripts-frame-deco"></div>
    </div>
  </div>
</Layout>
<style>
@import url('../../styles/global.css');
.center-video-frame {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  width: 100vw;
  position: relative;
  z-index: 2;
}
.reth-scripts-sol-deco-link {
  position: absolute;
  top: 0.8vw;
  left: 1vw;
  z-index: 10;
  display: block;
  width: 13vw;
  min-width: 120px;
  max-width: 220px;
  height: auto;
  cursor: pointer;
}
.reth-scripts-sol-deco {
  width: 100%;
  height: auto;
  opacity: 0.97;
  pointer-events: none;
}
.autorretrato-video {
  display: block;
  margin: 0 auto;
  max-width: 70vw;
  max-height: 70vh;
  width: 100%;
  border-radius: 1vw;
  box-shadow: 0 0 2vw #0008;
  background: #222;
  z-index: 5;
}
</style> 