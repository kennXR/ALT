---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Photographies">
  <header class="banner-frame" style="background-color: var(--color-banner); min-height: 100vh; display: flex; align-items: center; justify-content: center;">
    <div style="width: 100%; max-width: 1400px; display: flex; align-items: center; justify-content: space-between; position: relative;">
      <div class="banner-sun banner-sun-left" style="width: 20%; min-width: 120px; max-width: 350px;">
        <img src="/img/Sol.png" alt="Sun" style="width: 100%; height: auto; object-fit: contain;" />
      </div>
      <div style="width: 60%; min-width: 250px; display: flex; flex-direction: column; align-items: center; gap: 3rem; padding: 0 2vw; z-index: 2;">
        <div style="text-align: center;">
          <h1>Photographies</h1>
          <p class="banner-subtitle">Capture the moment</p>
        </div>
        <div class="category-grid">
          <a href="/photographies/content" class="category-item" target="_blank">
            <div class="category-icon">
              <img src="/img/Foto.png" alt="Photography" />
            </div>
          </a>
        </div>
      </div>
      <div class="banner-sun banner-sun-right" style="width: 20%; min-width: 120px; max-width: 350px;">
        <img src="/img/Sol.png" alt="Sun" style="width: 100%; height: auto; object-fit: contain;" />
      </div>
    </div>
  </header>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: #333;
  }

  .gallery {
    width: 100%;
  }

  .photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .photo-item {
    aspect-ratio: 3/2;
    overflow: hidden;
    border-radius: 8px;
  }

  .placeholder {
    background-color: #f5f5f5;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    color: #666;
  }
</style> 