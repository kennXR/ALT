---
import Layout from '../layouts/Layout.astro';
import AnimatedStars from '../components/AnimatedStars.astro';
---

<Layout title="Photographies">
  <div style="width: 100%; max-width: 1400px; display: flex; align-items: center; justify-content: space-between; position: relative;">
    <a href="/" class="banner-sun banner-sun-left" style="width: 20%; min-width: 120px; max-width: 350px; text-decoration: none;">
      <img src="/img/Sol.png" alt="Sun" style="width: 100%; height: auto; object-fit: contain;" />
    </a>
    <div style="width: 60%; min-width: 250px; display: flex; flex-direction: column; align-items: center; gap: 3rem; padding: 0 2vw; z-index: 2;">
      <div style="text-align: center;">
        <h1>Photographies</h1>
        <p class="banner-subtitle">Capture the moment</p>
      </div>
      <div class="category-grid">
        <a href="/photographies/content" class="category-item" target="_blank">
          <div class="category-icon">
            <img src="/img/Foto.png" alt="Photography" />
          </div>
        </a>
      </div>
    </div>
    <a href="/" class="banner-sun banner-sun-right" style="width: 20%; min-width: 120px; max-width: 350px; text-decoration: none;">
      <img src="/img/Sol.png" alt="Sun" style="width: 100%; height: auto; object-fit: contain;" />
    </a>
  </div>
  <AnimatedStars count={16} />
</Layout>

<style>
  @import url('../styles/global.css');
  .banner-sun {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }
  .banner-subtitle {
    font-size: 1.5rem;
    color: #fff;
    margin: 0;
    opacity: 0.9;
  }
  .category-grid {
    display: flex;
    justify-content: center;
    gap: 4rem;
  }
  .category-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    transition: transform 0.3s ease;
    padding: 1rem;
  }
  .category-item:hover {
    transform: translateY(-5px);
  }
  .category-icon {
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }
  .category-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  @media (max-width: 900px) {
    h1 { font-size: 6vw; }
    .banner-sun img { width: 22vw; }
  }
  @media (max-width: 600px) {
    h1 { font-size: 8vw; }
    .banner-sun img { width: 14vw; }
  }
  .animated-bg {
    position: fixed;
    inset: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 0;
  }
  .bg-moon {
    position: absolute;
    width: 8vw;
    min-width: 60px;
    opacity: 0.7;
    animation: moon-float 7s ease-in-out infinite alternate;
  }
  .moon1 { left: 5vw; top: 10vh; animation-delay: 0s; }
  .moon2 { right: 7vw; bottom: 12vh; transform: scaleX(-1); animation-delay: 2s; }
  @keyframes moon-float {
    0% { transform: translateY(0) scaleX(1); }
    100% { transform: translateY(-30px) scaleX(1); }
  }
  .bg-star {
    position: absolute;
    opacity: 0.8;
    animation: star-twinkle 2.5s infinite alternate;
  }
  .star1 { left: 20vw; top: 18vh; animation-delay: 0.5s; }
  .star2 { right: 18vw; top: 22vh; animation-delay: 1.2s; }
  .star3 { left: 40vw; top: 10vh; animation-delay: 1.7s; }
  .star4 { left: 60vw; top: 30vh; animation-delay: 0.9s; }
  .star5 { right: 10vw; bottom: 18vh; animation-delay: 2.2s; }
  @keyframes star-twinkle {
    0% { opacity: 0.8; transform: scale(1); }
    100% { opacity: 0.3; transform: scale(1.2); }
  }
</style> 