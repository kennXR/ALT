

<div class="preload">
  <div class="preload-content">
    <div class="images-container">
      <img src="/img/Luna.png" alt="Moon" class="moon-image" />
      <img src="/img/Sol.png" alt="Sun" class="sun-image" />
      <img src="/img/Luna.png" alt="Moon Inverted" class="moon-image inverted" />
    </div>
  </div>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Edu+NSW+ACT+Cursive:wght@400..700&family=Romanesco&display=swap');

  .preload {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #501b1b;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    transition: opacity 4s ease-out;
    font-family: 'Edu NSW ACT Cursive', cursive;
    color: white;
  }

  .preload-content {
    width: 80%;
    height: 80%;
    background-color: #9b2c2c;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    clip-path: polygon(
      0% 10%, 10% 0%, 90% 0%, 100% 10%,
      100% 90%, 90% 100%, 10% 100%, 0% 90%
    );
    margin: 8px;
    border: 8px solid white;
  }

  .preload-content::before {
    content: '';
    position: absolute;
    inset: 4px;
    background-color: #9b2c2c;
    clip-path: polygon(
      0% 10%, 10% 0%, 90% 0%, 100% 10%,
      100% 90%, 90% 100%, 10% 100%, 0% 90%
    );
  }

  .images-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 90%;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }

  .sun-image {
    width: 500px;
    height: auto;
    object-fit: contain;
  }

  .moon-image {
    width: 200px;
    height: auto;
    object-fit: contain;
  }

  .moon-image.inverted {
    transform: scaleX(-1);
  }

  .preload.fade-out {
    opacity: 0;
    pointer-events: none;
  }
</style>

<script>
  window.addEventListener('load', () => {
    const preload = document.querySelector('.preload');
    if (preload) {
      preload.classList.add('fade-out');
      setTimeout(() => {
        preload.remove();
      }, 4000); // 4 seconds
    }
  });
</script> 